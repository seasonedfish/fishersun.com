---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
    name: string;
    technologies: string;
    description: string;
    image?: ImageMetadata;
    class?: string;
}

const { name, technologies, description, image, class: className, ...rest } = Astro.props;
---
<div class={className} {...rest}>
    <h2 class="text-xl font-bold">
        {name}
    </h2>
    <p class="text-gray-600 text-sm">{technologies}</p>
    {image && <Image src={image} alt={name} width={150} densities={[1, 1.5]} class="float-right"></Image>}
    <p>
        {description}
    </p>
</div>