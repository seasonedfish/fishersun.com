---
import Prose from "./Prose.astro"
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
    project: CollectionEntry<"projects">
    class?: string
}

const { project, class: className, ...rest } = Astro.props;

const { Content }  = await project.render()
---
<div class={className} {...rest}>
    <h2 class="text-xl font-bold">
        {project.data.name}
    </h2>
    {project.data.image && <Image src={project.data.image} alt={project.data.name} width={150} densities={[1, 1.5]} class="float-right"></Image>}
    
    <Prose class="text-justify">
        <Content />
    </Prose>

    <p class="text-gray-500 text-sm ml-20 mt-2 text-end">{project.data.technologies.join(", ")}</p>
</div>