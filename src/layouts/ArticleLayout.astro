---
/**
 * A page consisting of an Article component.
 * Its heading is just a Heading component.
 */
import Article from "../components/Article.astro";
import Heading from "../components/Heading.astro";
import BaseLayout from "./BaseLayout.astro";

interface Props {
    pageTitle: string,
    headingText: string
}

const { pageTitle, headingText } = Astro.props;
---
<BaseLayout pageTitle={pageTitle}>
    <Article class="mt-5">
        <Heading slot="heading">{headingText}</Heading>
        <slot />
    </Article>
</BaseLayout>
